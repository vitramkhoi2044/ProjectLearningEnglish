<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/may"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top 5 High Score Correct Word"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        />

    <RelativeLayout
        android:id="@+id/LayoutHighScoreCorrectWord1"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#006400"
        android:background="@drawable/roundborder_highscore">

        <TextView
            android:id="@+id/Txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            />

        <TextView
            android:id="@+id/TxtNameCorrectWordTop1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/Txt1"
            android:layout_alignBottom="@id/Txt1"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/TxtScoreCorrectWordTop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/TxtNameCorrectWordTop1"
            android:layout_alignBottom="@id/TxtNameCorrectWordTop1"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>

