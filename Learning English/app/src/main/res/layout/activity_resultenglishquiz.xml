<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/TxtResultEnglishQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        />

    <RelativeLayout
        android:id="@+id/BoxView"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_below="@+id/TxtResultEnglishQuiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundborder_result">

        <ImageView
            android:id="@+id/ImgGoldenCup"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/goldencup"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/Txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulation!"
            android:layout_below="@id/ImgGoldenCup"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            />



        <TextView
            android:id="@+id/TxtPercentCorrectResultEnglishQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Txt1"
            android:layout_marginTop="10dp"

            android:textAlignment="center"
            android:textColor="#008000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz completed successfully."
            android:layout_below="@id/TxtPercentCorrectResultEnglishQuiz"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />

        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/ChartEnglishQuiz"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/Txt2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>

    <Button
        android:id="@+id/BtnBackResultEnglishQuiz"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:backgroundTint="#DDDDDD"
        android:textColor="@color/black"
        android:layout_below="@id/BoxView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>