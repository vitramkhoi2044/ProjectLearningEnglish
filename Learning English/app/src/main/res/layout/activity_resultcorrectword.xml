<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/TxtResultCorrectWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        />

    <RelativeLayout
        android:id="@+id/BoxView"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_below="@+id/TxtResultCorrectWord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundborder_result">

        <ImageView
            android:id="@+id/ImgGoldenCup"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/goldencup"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/Txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulation!"
            android:layout_below="@id/ImgGoldenCup"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/TxtPercentCorrectResultCorrectWord"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/Txt1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#008000"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/TxtTotalStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TxtPercentCorrectResultCorrectWord"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            />

        <ImageView
            android:id="@+id/ImgStar"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_below="@id/TxtPercentCorrectResultCorrectWord"
            android:layout_alignBottom="@id/TxtTotalStar"
            android:src="@drawable/star"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/TxtTotalStar"
            />

        <TextView
            android:id="@+id/Txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You must learn english harder"
            android:layout_below="@id/ImgStar"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            />
        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/ChartCorrectWord"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/Txt2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:ignore="MissingPrefix"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/BtnBackResultCorrectWord"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:backgroundTint="#DDDDDD"
        android:textColor="@color/black"
        android:layout_below="@id/BoxView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>