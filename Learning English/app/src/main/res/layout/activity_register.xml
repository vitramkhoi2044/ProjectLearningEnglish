<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background6"
    >
    <ImageView
        android:id="@+id/ImgLogin"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/login" />
`

    <RelativeLayout

        android:id="@+id/TxtLoginLayoutCenter"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp">

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/textInputEmail"
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <EditText
                android:id="@+id/EditRegisterEmail"
                style="@style/modifiedEditText"
                android:hint="Please enter the email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPwd"
            style="@style/parent"
            android:layout_below="@+id/textInputEmail"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <EditText
                android:id="@+id/EditRegisterPwd"
                style="@style/modifiedEditText"
                android:hint="Please enter the password"
                android:inputType="textPassword"
                android:maxLines="1"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPwdConfirm"
            style="@style/parent"
            android:layout_below="@+id/textInputPwd"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <EditText
                android:id="@+id/EditRegisterConfirmPwd"
                style="@style/modifiedEditText"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:maxLines="1"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/textAlreadyHaveAccountRegister"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/textInputPwdConfirm"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Already have an account ? LOGIN NOW"
            android:textAlignment="textEnd"
            android:textColor="@color/teal_200"
            android:textSize="15dp" />


        <Button
            android:id="@+id/BtnToSignUp"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@+id/textAlreadyHaveAccountRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/colorAccent"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="NotSibling" />

    </RelativeLayout>





</RelativeLayout>