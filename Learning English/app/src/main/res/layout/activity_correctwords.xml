<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/may">

        <TextView
            android:id="@+id/TxtDongho"
            android:layout_width="20dp"
            android:layout_height="30dp"
            app:drawableLeftCompat="@android:drawable/ic_lock_idle_alarm"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textSize="25dp"
            app:drawableTint="@color/black"
            android:layout_alignBaseline="@id/Chrono"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1/10"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Chronometer
            android:id="@+id/Chrono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/TxtDongho"
            android:countDown="true"
            android:format="20"
            android:textColor="@color/black"
            android:textSize="30dp" />


        <RelativeLayout
            android:id="@+id/TxtLayoutCenter"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/TxtDongho"
            android:layout_centerHorizontal="true"
            android:background="@drawable/quiz_background"
            >

            <TextView
                android:id="@+id/TxtCauhoi"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:text="Câu Hỏi"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/TxtQuestion"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_below="@id/TxtCauhoi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="Câu hỏi hiển thị ở đây"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/TxtTraloi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TxtLayoutCenter"
            android:layout_alignBaseline="@id/EdtAnswer"
            android:layout_marginLeft="15dp"
            android:text="Trả lời:"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/EdtAnswer"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_below="@id/TxtLayoutCenter"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/TxtTraloi"
            android:text="điển cầu trả lời"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:background="@color/black"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/BtnSubmit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/EdtAnswer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#106ECC"
            android:text="Submit"
            android:textColor="@color/black"
            android:background="@drawable/quiz_background"
            />
    </RelativeLayout>
</RelativeLayout>